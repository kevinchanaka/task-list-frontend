{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "require-jsdoc": "off",
        "react/prop-types": "off",
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "indent": [
            "error",
            2
        ]
    },
    "ignorePatterns": [
        "src/react-app-env.d.ts"
    ]
}